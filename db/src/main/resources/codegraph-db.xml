<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:neo4j="http://www.springframework.org/schema/data/neo4j"
       xsi:schemaLocation="
        http://www.springframework.org/schema/data/neo4j
        http://www.springframework.org/schema/data/neo4j/spring-neo4j.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <neo4j:repositories base-package="com.dnfeitosa.codegraph.db"/>
    <context:component-scan base-package="com.dnfeitosa.codegraph.db" />
    <context:component-scan base-package="com.dnfeitosa.codegraph.services" />

    <beans profile="production">
        <neo4j:config graphDatabaseService="graphDatabaseService" base-package="com.dnfeitosa.codegraph.db.graph.nodes" />

        <bean id="graphDatabaseService" class="org.springframework.data.neo4j.rest.SpringRestGraphDatabase">
            <constructor-arg index="0" value="http://localhost:7474/db/data"/>
<!--             <constructor-arg index="0" value="http://10.9.53.64:7474/db/data"/> -->
        </bean>
    </beans>
</beans>
