<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:neo4j="http://www.springframework.org/schema/data/neo4j"
       xsi:schemaLocation="http://www.springframework.org/schema/data/neo4j
        http://www.springframework.org/schema/data/neo4j/spring-neo4j.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:/codegraph-db-base.xml" />

    <neo4j:config graphDatabaseService="graphDatabaseService" base-package="com.dnfeitosa.codegraph.db.nodes" />
    <beans profile="default">
        <bean id="graphDatabaseService" class="org.springframework.data.neo4j.rest.SpringCypherRestGraphDatabase">
            <constructor-arg index="0" value="${codegraph.db.neo4j.url}"/>
        </bean>
    </beans>
</beans>
