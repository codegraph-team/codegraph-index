{
    "swagger": "2.0",
    "info": {
        "version": "0.1.0",
        "title": "Codegraph API"
    },
    "paths": {
        "/applications": {
            "get": {
                "description": "Lists all applications.",
                "responses": {
                    "200": {
                        "description": "Successful response containing a list of applications"
                    }
                }
            }
        },
        "/applications/{name}": {
            "get": {
                "parameters": [
                    {
                        "name": "name",
                        "type": "string",
                        "in": "path",
                        "required": true,
                        "description": "Application name."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response containing the application data",
                        "schema": {
                            "$ref": "#/definitions/Application"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Resource": {
            "type": "object",
            "properties": {
                "uri": {
                    "type": "string"
                }
            }
        },
        "Module": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/Resource"
                }
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "application": {
                    "$ref": "#/definitions/Application"
                }
            }
        },
        "Application": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/Resource"
                }
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "modules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Module"
                    }
                }
            }
        }
    }
}